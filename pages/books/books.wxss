page, .page, .page__bd {
  height: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 50px;
  background-color: white;
}

.book__content {
  padding-top: 5px;
  padding-bottom: 5px;
}

.book__image {
  width: 65px;
  height: 87px;
  margin-left: 10px;
}

.book__text__title{
  font-size: 14px;
}

.book__text__author{
   font-size: 12px;
}

/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

